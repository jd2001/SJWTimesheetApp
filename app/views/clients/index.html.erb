<%= link_to 'New client', new_client_path, class: 'btn-primary' %>
<div class="flex flex-col bg-white rounded-lg border-2 border-gray-300 p-4">
  <table class="table-auto">
    <thead>
      <th>Name</th>
      <th>Billing Type 1</th>
      <th>Billing Type 2</th>
      <th>Billing Type 3</th>
      <th>Billing Type 4</th>
      <th>Billing Type 5</th>
    </thead>
    <tbody>
    <% @clients.each do |client| %>
      <tr class="text-center">
        <td> <%= link_to client.name, edit_client_path(client.id) %> <%= link_to 'X', client_path(client.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %> </td>
        <% client.client_billing_types.each do |i| %>
          <td> <%= i.billing_type.name %> </td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>